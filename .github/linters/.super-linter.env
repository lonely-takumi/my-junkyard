# Configuration file for Super-Linter
# This file contains custom linting rules and settings

# Disable certain linters that might be too strict for a junkyard repo
VALIDATE_JSCPD=false
VALIDATE_KUBERNETES_KUBEVAL=false
VALIDATE_ANSIBLE=false
VALIDATE_CHECKOV=false

# Enable basic file validation
VALIDATE_MARKDOWN=true
VALIDATE_YAML=true
VALIDATE_JSON=true
VALIDATE_DOCKERFILE=true

# Programming languages
VALIDATE_PYTHON=true
VALIDATE_JAVASCRIPT=true
VALIDATE_TYPESCRIPT=true
VALIDATE_GO=true
VALIDATE_JAVA=true
VALIDATE_PHP=true
VALIDATE_RUBY=true
VALIDATE_RUST=true

# Web technologies
VALIDATE_HTML=true
VALIDATE_CSS=true

# Shell scripts
VALIDATE_BASH=true

# Other formats
VALIDATE_XML=true
VALIDATE_SQL=true